# Application Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:3000

# Database Configuration (Development - you may need to update these)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=appsentry_dev
MYSQL_USERNAME=root
MYSQL_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Azure AD Configuration (Development - placeholder values)
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_REDIRECT_URI=http://localhost:3001/auth/callback

# JWT Configuration
JWT_SECRET=development-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=development-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Testing Configuration
HEALTH_CHECK_PASSWORD=test-password-123
PLAYWRIGHT_HEADLESS=true
PARALLEL_TEST_LIMIT=3

# Azure Storage (Optional - for artifact storage)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_STORAGE_CONTAINER=appsentry-artifacts

# Teams Webhook (Optional)
TEAMS_WEBHOOK_URL=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@appsentry.com
EMAIL_RECIPIENTS=

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=false
ENABLE_BULK_OPERATIONS=true
ENABLE_SCHEDULED_REPORTS=true